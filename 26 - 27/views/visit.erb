<h3>Записаться можно тут!</h3>

<%# Тут подключается логика jQuery %>
<script type="text/javascript">

  //этот синтаксис используем всегда где вносим джаваскрипт код
  $(function(){
    //тут мы можем написать любой джаваскрипт код, который исполнится после загрузки страницы
     $('#color').simplecolorpicker();
     $('#datetimepicker').datetimepicker();
  });
</script>

<form action="/visit" method="POST">
  <div class="mb-3">
    <label>Давайте познакомимся :) </label>
    <input name= "username" type="text" class="form-control" placeholder="Введите ваше имя..." value="<%= @usrname %>">
  </div><br />

  <div class="mb-3">
    <label>Когда вам было бы удобно?</label>
    <input id="datetimepicker" name= "date_time" type="text" class="form-control" placeholder="Введите дату и время..." value="<%= @datetime %>">
  </div><br />

  <div class="mb-3">
    <label>Куда вам перезвонить?</label>
    <input name="phone_number" type="text" class="form-control" placeholder="Введите ваш номер телефона..." value="<%= @phonenumber %>">
  </div><br />

  
  <div class="form-group">
    <label>Выберите барбера:</label>
    <select name="barber" class="form-control">

      <% @barbers.each do |item| %>
        <option <%= @brb == item['Name'] ? 'selected' : ''  %>><%= item['Name'] %></option>
      <% end %>

  </select>
  <br />
  <br />


  <h5>Выберите цвет:</h5>
  <select id="color" name="color">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
  </select>
  <br />
  <br />

  <button type="submit" class="btn btn-danger">Записаться</button>
</form>